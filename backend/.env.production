# ===============================================
# Environment Variables for AWS Deployment
# Interactive Media Assignment
# ===============================================

# AWS Configuration
AWS_REGION=us-east-1
NODE_ENV=production

# DynamoDB Table Names (will be set by CloudFormation)
PROJECTS_TABLE=interactive-media-assignment-projects
ANALYTICS_TABLE=interactive-media-assignment-analytics

# CORS Origins (update with your actual domain)
CORS_ORIGINS=https://your-domain.com,https://your-cloudfront-domain.cloudfront.net

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Cache Settings
CACHE_TTL=3600
